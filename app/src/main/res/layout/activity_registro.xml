<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_01"
    tools:context="org.unlam.covidapp.ui.login.RegistroActivity">


    <EditText
        android:id="@+id/input_dni"
        android:layout_width="300dp"
        android:background="#9b9b9b"
        android:layout_centerHorizontal="true"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/input_Lastname"
        android:ems="10"
        android:hint="DNI"
        android:inputType="numberDecimal"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/input_commission"
        android:layout_width="300dp"
        android:background="#9b9b9b"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/input_password"
        android:ems="10"
        android:hint="Comision"
        android:textColor="#ffffff"
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/input_email"
        android:ems="10"
        android:hint="email"
        android:layout_width="300dp"
        android:background="#9b9b9b"
        android:layout_height="36dp"
        android:layout_below="@+id/input_dni"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/input_group"
        android:ems="10"
        android:hint="Grupo"
        android:layout_width="300dp"
        android:background="#9b9b9b"
        android:layout_height="36dp"
        android:layout_below="@+id/input_commission"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="numberDecimal"
        android:textColor="#ffffff"
        />

    <EditText
        android:id="@+id/input_password"
        android:background="#9b9b9b"
        android:textColor="#ffffff"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_below="@+id/input_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/input_name"
        android:background="#9b9b9b"
        android:textColor="#ffffff"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:layout_below="@+id/text_env"
        android:hint="Nombre"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/input_Lastname"
        android:background="#9b9b9b"
        android:textColor="#ffffff"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Apellido"
        android:layout_below="@+id/input_name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_env"
        android:background="#9b9b9b"
        android:textColor="#ffffff"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:visibility="invisible"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="516dp" />

    <TextView
        android:id="@+id/text_token_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="547dp" />


    <Button
        android:id="@+id/send_request"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_pink"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/input_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Registrarse" />

</RelativeLayout>